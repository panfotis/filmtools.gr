{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'bg-white',
		'pb-64 pb-lg-128'

  ]
%}
<div{{attributes.addClass(classes)}}>
	{{ title_prefix }}
	{{ title_suffix }}


  <div class="container-fluid py-40 py-lg-80">
    <div class="row">
      <div class="col-12 text-center">
        {{ content.body.0}}
      </div>
    </div>
  </div>

  <div class="d-flex images">
    {{ content.field_images }}
  </div>

  <div class="container-fluid pt-40">
    <div class="row g-32">

      <div class="col-12 col-lg-5 description">
        {{ content.field_description.0 }}
      </div>


      <div class="col-12 col-lg-5 offset-lg-2 d-flex justify-content-lg-end gap-64">
        <div class="total-categories">
          <span>{{ content.field_total_categories.0 }}+</span>
          {{ 'Κατηγορίες'|t }}
        </div>
        <div class="total-products">
          <span>{{ content.field_total_products.0 }}+</span>
          {{ 'Προϊόντα'|t }}
        </div>
      </div>
    </div>
  </div>

</div>

