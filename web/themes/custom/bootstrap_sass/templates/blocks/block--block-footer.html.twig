{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'text-white bg-black'
  ]
%}
<div{{attributes.addClass(classes)}}>
	{{ title_prefix }}
	{{ title_suffix }}

	<div class="container-fluid pt-80 pb-64">
		<div class="row">
			<div class="col-12 col-lg-6">
				<div class="logo mb-80 mb-lg-128">
					<img class="img-fluid" src="/{{directory}}/images/custom/filmtools-white-logo.svg" alt="Filemtools logo">
				</div>

				<div class="d-flex align-items-center pb-3">
					<img class="pe-2" src="/{{directory}}/images/custom/location.svg" alt="location pin">
					{{ content.field_address.0 }}
				</div>
				<div class="d-flex align-items-center pb-3">
					<img class="pe-2" src="/{{directory}}/images/custom/telephone.svg" alt="telephone">

					{{ content.field_telephone.0 }}
				</div>
				<div class="d-flex align-items-center">
					<img class="pe-2" src="/{{directory}}/images/custom/email.svg" alt="email">
					{{ content.field_email.0 }}
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container-fluid py-3 py-lg-2 footer-bottom">
	<div class="row gy-2">
		<div class="col-12 col-lg-6 text-center text-lg-start order-2 order-lg-1">
			<p>Copyright Â©{{ 'now' | date('Y') }} filmtools.gr</p>
		</div>
		<div class="col-12 col-lg-6 text-center text-lg-end order-1 order-lg-2">
			<a href="https://www.fotispan.gr" target="_blank">website by fotispan</a>
		</div>

	</div>
</div>
