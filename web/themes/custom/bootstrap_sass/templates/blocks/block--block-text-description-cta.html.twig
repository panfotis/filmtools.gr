{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
'bg-gray py-64 py-lg-80'

  ]
%}
<div{{attributes.addClass(classes)}}>
	{{ title_prefix }}
	{{ title_suffix }}
	<div class="container">
		<div class="row gy-64">
			<div class="col-12 col-lg-8 text-center text-lg-start">
				<h4 class="fs-52 fw-800 mb-24">
					{{content.field_title.0}}
				</h4>
				{{content.body.0}}
			</div>
			<div class="col-12 col-lg-4 d-flex align-items-lg-end justify-content-center justify-content-lg-end">
				<a href="{{ content.field_button.0['#url'] }}" class="btn btn-primary">{{ content.field_button.0['#title'] }}</a>
			</div>
		</div>
	</div>
</div>
